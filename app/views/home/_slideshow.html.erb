<div class= "slide_show_container">
  <div class="slide_show">
    <div class="slide">
      <div class="fadein">
        <img src= <%= asset_path "greece.jpeg"%> >
        <img src= <%= asset_path "greece1.jpeg"%> >
        <img src= <%= asset_path "greece2.jpeg"%> >
      </div>
    </div>
    <div class="social_media_container">

      <div class="twitter_home">
        <a href="https://twitter.com/OneiricNews" class="twitter-follow-button" data-show-count="false">Follow @OneiricNews</a>
        <script>!function(d,s,id){var js,fjs=d.getElementsByTagName(s)[0];if(!d.getElementById(id)){js=d.createElement(s);js.id=id;js.src="//platform.twitter.com/widgets.js";fjs.parentNode.insertBefore(js,fjs);}}(document,"script","twitter-wjs");</script>
      </div>
      <div class="like_bar">
      <iframe src="http://www.facebook.com/plugins/like.php?href=http://http://www.facebook.com/oneiric.smith"
              scrolling="no" frameborder="0"
              style="border:none; width:450px; height:80px">
      </iframe>
     </div>
    </div>
    <div class="join_button">
      <button class= "btn-large btn-info"><%= link_to "CREATE YOUR FREE ACCOUNT", new_user_registration_path, class: "join" %></button>
    </div>
  </div>
</div>
<script>
    $(function(){
        $('.fadein img:gt(0)').hide();
        setInterval(function(){
                    $('.fadein :first-child').fadeOut()
                            .next('img').fadeIn()
                            .end().appendTo('.fadein');},
                5000);
    });
</script>