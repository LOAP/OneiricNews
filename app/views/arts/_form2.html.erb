<%= form_for([@user, @user.arts.build ]) do |f| %>
    <div class="field">
      Title: Max 100 characters<br />
      <%= f.text_field :title %>
    </div>
    <div class="field">
      Art: Max 300 characters<br />
      <%= f.text_area :content %>
    </div>
    <div class="field">
    </div>
    <div class="actions">
      <%= f.submit %>
    </div>
<% end %>

